<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/logo"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/icon"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/logoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/logo">

        <TextView
            android:id="@+id/appName_p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abeezee"
            android:text="In"
            android:textColor="@color/appColor"
            android:textSize="35sp"
            android:textStyle="bold" />
        <TextView
            android:fontFamily="@font/abeezee"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/appName_2"
            android:text="Distant"
            android:textStyle="bold"
            android:textSize="35sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shortDesc"
        android:layout_below="@+id/logoText"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:fontFamily="@font/abeezee"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Long Distance Relationship Community"/>

    </LinearLayout>
    <View
        android:id="@+id/line"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/shortDesc"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>


    <LinearLayout
        android:id="@+id/logOrSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/loginFragment"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:fontFamily="@font/abeezee"
            android:text="Log in"
            android:textColor="@color/appColor"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:text="or"
            android:textColor="@color/textColor"
            android:textSize="15sp" />

        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/signUpFragment"
            android:layout_width="100dp"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/abeezee"
            android:text="Sign up"
            android:textColor="@color/textColor"
            android:textSize="25sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="-20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/inputs"
        android:layout_below="@+id/logOrSign">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/emailTIL">

            <EditText
                android:fontFamily="@font/abeezee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/emailEt"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/inputs2"
        android:layout_below="@+id/inputs">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/passwordTIL"
            app:passwordToggleEnabled="true">

            <EditText
                android:fontFamily="@font/abeezee"
                android:id="@+id/passwordEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/inputs2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rememberMeLayout">

        <CheckBox
            android:id="@+id/rememberMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="Remember me"
            android:textColor="@color/textColor"
            android:textSize="14sp"
            android:fontFamily="@font/abeezee"/>


    </LinearLayout>


    <LinearLayout
        android:layout_below="@id/rememberMeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/buttonsLayout">


        <LinearLayout
            android:layout_marginStart="0dp"
            android:gravity="center"
            android:layout_width="140dp"
            android:layout_height="wrap_content">

            <Button
                android:fontFamily="@font/abeezee"
                android:textSize="16sp"
                android:id="@+id/loginBtn"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:drawableStart="@drawable/ic_login"
                android:text="Login" />

        </LinearLayout>


        <com.google.android.gms.common.SignInButton
            android:id="@+id/googleLogin"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="10dp"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginRight="50dp"/>





    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/buttonsLayout"
        android:layout_width="120dp"
        android:layout_marginLeft="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/forgotPassLayout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mRecoverPassTv"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/abeezee"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>


</RelativeLayout>